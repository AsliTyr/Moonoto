<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moonoto.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Moonoto.Views">

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent
          ContentTemplate="{DataTemplate views:HomePage}"
          Route="HomePage" />
        </Tab>

        <Tab Title="Search" Icon="search.svg">
            <ShellContent
          ContentTemplate="{DataTemplate views:SearchPage}"
          Route="SearchPage" />
        </Tab>

        <Tab Title="Library" Icon="album_list.svg">
            <ShellContent
          ContentTemplate="{DataTemplate views:LibraryPage}"
          Route="LibraryPage" />
        </Tab>
    </TabBar>
</Shell>