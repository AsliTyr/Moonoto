<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moonoto.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moonoto"
    Title="Moonoto">

</Shell>
    
<TabBar>
    <Tab Title="Home" Icon="home.png">
        <ShellContent
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />
   </Tab>

   <Tab Title="Search" Icon="home.png">
       <ShellContent
          ContentTemplate="{DataTemplate local:SearchPage}"
          Route="SearchPage" />
    </Tab>
    
    <Tab Title="Library" Icon="home.png">
        <ShellContent
          ContentTemplate="{DataTemplate local:LibraryPage}"
          Route="LibraryPage" />
    </Tab>
</TabBar>
